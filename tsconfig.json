{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
